<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/light_yellow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            android:layout_gravity="start" />

        <!-- User Photo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp">

            <ImageView
                android:id="@+id/user_photo"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/ic_user"
                android:background="@drawable/circle_background"
                android:scaleType="centerCrop"
                android:contentDescription="User Photo" />

        </LinearLayout>

        <TextView
            android:id="@+id/photo_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click image to upload your photo"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="-8dp"
            android:layout_marginBottom="22dp"
            android:gravity="center" />

        <!-- Username -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:padding="12dp"
            android:text="Your Username"
            android:textSize="16sp"
            android:layout_marginBottom="22dp" />

        <!-- Location -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:padding="12dp"
            android:hint="City, Province, Country"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:scrollHorizontally="false"
            android:textSize="16sp"
            android:layout_marginBottom="22dp"
            android:focusable="false"
            android:clickable="false" />

        <!-- User Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@android:color/darker_gray"
            android:gravity="start|top"
            android:hint="Write something about yourself..."
            android:maxLength="500"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_marginTop="30dp"
            android:backgroundTint="#FF5555"
            android:textColor="#FFFFFF"
            android:layout_gravity="center" />

    </LinearLayout>

</ScrollView>
